<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kolyanov542255.schedule_classes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/title_activity_days_list"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.kolyanov542255.schedule_classes.LessonActivity"
            android:label="@string/title_activity_days_list" >
        </activity>
        <activity
            android:name="ru.kolyanov542255.schedule_classes.LessonListActivity"
            android:label="@string/title_activity_lesson_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WeekPagerActivity" />
        </activity>
        <activity
            android:name="ru.kolyanov542255.schedule_classes.WeekPagerActivity"
            android:label="@string/title_activity_days_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.kolyanov542255.schedule_classes.SettingsPagerActivity"
            android:label="@string/title_activity_settings_pager"
            android:parentActivityName="ru.kolyanov542255.schedule_classes.WeekPagerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.kolyanov542255.schedule_classes.WeekPagerActivity" />
        </activity>
    </application>

</manifest>