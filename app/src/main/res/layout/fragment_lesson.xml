<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kolyanov542255.schedule_classes.LessonFragment"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lesson_name"
            android:inputType="text"
            android:autoText="false"
            android:hint="@string/name_classes_text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:inputType="text"
            android:id="@+id/teacher_name"
            android:textColor="@color/abc_primary_text_material_light"
            android:autoText="false"
            android:hint="@string/name_teacher_text"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:inputType="text"
            android:id="@+id/room"
            android:hint="@string/room_text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/week_type_begin_time"
            android:background="@color/divider"/>

    </LinearLayout>


</LinearLayout>
