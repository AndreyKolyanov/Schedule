<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_material_light"
        android:paddingBottom="@dimen/d10_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lesson_list_item_teacher"
            android:text="teacher"
            android:textColor="@color/primary_text"
            android:layout_below="@+id/lesson_list_item_name"
            android:layout_marginTop="38dp"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lesson_list_item_room"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/lesson_list_item_teacher"
            android:text="room"
            android:textColor="@color/primary_text"
            android:paddingTop="@dimen/d35_dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/lesson_list_item_time"
            android:layout_alignBottom="@+id/lesson_list_item_teacher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="time"
            android:textColor="@color/primary_text"
            android:paddingTop="@dimen/d35_dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/lesson_list_item_name"
            android:text="name"
            android:textColor="@color/primary_text"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>
